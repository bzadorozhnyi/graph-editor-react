[
    {
        "selector": "node",
        "style": {
            "background-color": "#808080",
            "border-color": "black",
            "border-style": "solid",
            "border-width": "1px",

            "label": "data(label)",
            "text-halign": "center",
            "text-valign": "center",

            "font-family": ["Lato", "Segoe UI", "Lucida Sans Unicode", "Helvetica Neue", "Helvetica", "Arial", "sans-serif"],
            "font-size": "18px",
            "font-weight": "800",

            "height": "48",
            "width": "48"
        }
    },
    {
        "selector": "node[backgroundColor]",
        "style": {
            "background-color": "data(backgroundColor)"
        }
    },
    {
        "selector": "node[color]",
        "style": {
            "color": "data(color)"
        }
    },
    {
        "selector": "node[fontSize]",
        "style": {
            "font-size": "data(fontSize)"
        }
    },
    {
        "selector": "node[opacity]",
        "style": {
            "background-opacity": "data(opacity)"
        }
    },
    {
        "selector": "node[size]",
        "style": {
            "height": "data(size)",
            "width": "data(size)"
        }
    },
    {
        "selector": "edge",
        "style": {
            "curve-style": "bezier",

            "font-family": ["Lato", "Segoe UI", "Lucida Sans Unicode", "Helvetica Neue", "Helvetica", "Arial", "sans-serif"],
            "font-size": "18px",
            "font-weight": "800"
        }
    },
    {
        "selector": "edge[label]",
        "style": {
            "label": "data(label)"
        }
    },
    {
        "selector": "edge[arrow]",
        "style": {
            "target-arrow-shape": "data(arrow)"
        }
    }
]